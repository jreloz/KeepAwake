<Window x:Class="KeepAwake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeepAwake"
        mc:Ignorable="d"
        Title="KeepAwake" Topmost="True" Height="318" Width="348" ResizeMode="CanMinimize" >



    <Grid Background="White" Margin="10">



        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />

        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>







        <TextBox x:Name="TxtKeepWake" Grid.ColumnSpan="4" Grid.RowSpan="4" TextWrapping="Wrap" IsEnabled="False" />


        <Button Grid.Column="0" Grid.Row="5" Grid.RowSpan="1" Grid.ColumnSpan="1" x:Name="BtnMouseLeftClick" Content="Mouse Click" Click="BtnMouseLeftClick_Click" />
        <Button Grid.Column="2" Grid.Row="5" Grid.RowSpan="1" Grid.ColumnSpan="1" x:Name="BtnWriteText" Content="Write Something" Click="BtnWriteText_Click" />



    </Grid>

</Window>
